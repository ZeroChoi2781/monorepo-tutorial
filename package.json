{
	"name": "@goorm-dev/gds",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"init": "yarn && yarn install:reactstrap && build:all",
		"dev": "concurrently \"yarn lint:watch\" \"yarn prettier:watch\" \"yarn storybook\"",
		"clean": "rm -rf node_modules && rm -f yarn.lock && lerna clean -y && yarn cache clean",
		"install:reactstrap": "git submodule update --init --recursive && cd libs/reactstrap && yarn",
		"build": "lerna run build --stream",
		"storybook": "start-storybook -p 9009 -s public",
		"lint:watch": "esw -w -c .eslintrc.js --ext .js --ext .jsx ./packages/*/src ./packages/gds-storybook/stories",
		"prettier:watch": "onchange 'packages/*/src/**/*.js' 'packages/*/src/**/*.jsx' 'packages/gds-storybook/stories/**/*.jsx' -- prettier --config .prettierrc --write {{changed}}",
		"publish": "yarn build && lerna publish",
		"publish:force": "lerna publish --force-publish"
	},
	"devDependencies": {
		"@babel/core": "^7.15.8",
		"@babel/eslint-parser": "^7.15.8",
		"@babel/plugin-transform-runtime": "^7.10.5",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-react": "^7.10.4",
		"@babel/preset-typescript": "^7.18.6",
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@commitlint/config-lerna-scopes": "^15.0.0",
		"@rollup/plugin-alias": "^3.1.9",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-commonjs": "^22.0.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@types/classnames": "^2.3.1",
		"@types/react": "^18.0.15",
		"@types/reactstrap": "^8.7.2",
		"babel-loader": "^8.2.3",
		"babel-plugin-module-resolver": "^4.1.0",
		"classnames": "^2.2.6",
		"concurrently": "^6.4.0",
		"conventional-changelog-conventionalcommits": "^4.6.1",
		"eslint": "^8.0.1",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-import-resolver-babel-module": "^5.1.2",
		"eslint-import-resolver-webpack": "^0.12.2",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^4.0.8",
		"eslint-watch": "^7.0.0",
		"husky": "4",
		"lerna": "^4.0.0",
		"onchange": "^7.1.0",
		"postcss-flexbugs-fixes": "^4.2.1",
		"postcss-import": "^12.0.1",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.4.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"read-pkg-up": "7.0.1",
		"rollup": "^2.77.2",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-postcss": "^3.1.3",
		"rollup-plugin-summary": "^1.4.3",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.32.1",
		"sass": "^1.49.7",
		"typescript": "^4.6.4"
	}
}
